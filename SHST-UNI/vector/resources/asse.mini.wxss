@charset "utf-8";

/* start --- body page --- start */
body,
page {
	margin: 0;
	font-family: Arial, Helvetica, 'STHeiti STXihei', 'Microsoft YaHei', Tohoma, sans-serif;
	padding: 10px;
	box-sizing: border-box;
	font-size: 15px;
	background-color: #F8F8F8;
	--color-blue: #4C98F7;
	--color-green: #009688;
    --color-white: #FFFFFF;
	--color-yellow: #FFB800;
	--color-orange: #FF5722;
}
/* end --- body page --- end */

/* start --- 动画 --- start */
@keyframes shallow {
	from {
		opacity: 1;
        visibility: visible;
	}
	to {
		opacity: 0.9;
        visibility: hidden;
	}
}
/* end --- 动画 --- end */

/* start --- Button --- start */
.a-btn {
	display: inline-block;
	padding: 7px 15px;
	margin: 3px;
	border-radius: 3px;
	text-align: center;
	text-rendering: auto;
	font-size: 12px;
	cursor: pointer;
	background: var(--color-green);
	color: #fff;
	transition: all .3s;
}

.a-btn:hover {
	animation: shallow .3s;
	opacity: 0.9;
}

.a-btn-blue {
	background: var(--color-blue);
}

.a-btn-white {
	background: #fff;
	color: #000;
	border: 1px solid #eee;
}

.a-btn-yellow {
	background: var(--color-yellow);
}

.a-btn-orange {
	background: var(--color-orange);
}

.a-btn-success-plain {
    color: #19be6b !important;
    border: 1px solid #71d5a1 !important;
    background-color: #dbf1e1 !important;
}

.a-btn-blue-plain{
    color: #2979ff !important;
    border: 1px solid #a0cfff !important;
    background-color: #ecf5ff !important;
}

.a-btn-yellow-plain{
    color: #f90 !important;
    border: 1px solid #fcbd71 !important;
    background-color: #fdf6ec !important;
}

.a-btn-orange-plain {
    color: #fa3534 !important;
    border: 1px solid #fab6b6 !important;
    background-color: #fef0f0 !important;
}


.a-btn-disable {
	background: #FBFBFB;
	color: #C9C9C9;
	cursor: not-allowed;
	border: 1px solid #eee;
}

.a-btn-large {
	padding: 10px 20px;
}

.a-btn-small {
	padding: 5px 10px;
	font-size: 12px;
}

.a-btn-mini {
	padding: 3px 5px;
	border-radius: 2px;
	font-size: 10px;
}

.a-btn-cicle {
	border-radius: 50px;
}

.a-btn-square{
    padding: 7px 7.5px;
}
/* end --- Button --- end */

/* start --- 颜色 --- start */
.a-color-blue {
	color: var(--color-blue);
}

.a-color-white {
	color: var(--color-white);
}

.a-color-green {
	color: var(--color-green);
}

.a-color-yellow {
	color: var(--color-yellow);
}

.a-color-orange {
	color: var(--color-orange);
}

.a-color-grey {
	color: #606266;
}

.a-background-blue {
	background-color: var(--color-blue);
}

.a-background-white {
	background-color: var(--color-white);
}

.a-background-green {
	background-color: var(--color-green);
}

.a-background-yellow {
	background-color: var(--color-yellow);
}

.a-background-orange {
	background-color: var(--color-orange);
}

.a-background-grey {
	background-color: #EEE;
}
/* end --- 颜色 --- end */

/* start --- 组件 --- start */
.a-hr {
	display: block;
	height: 1px;
	background: #EEEEEE;
	border: none;
	margin: 5px 0;
}

.a-fieldset {
	margin-top: 10px;
	border: 1px solid #eee;
}

.a-textarea {
	border: 1px solid #eee;
	width: calc(100% - 22px);
	padding: 10px;
	border-radius: 3px;
	margin-top: 10px;
	color: #aaa;
}
/* end --- 组件 --- end */

/* start --- 面板 响应式 --- start */
@media screen and (max-width:600px) { /* <=600 */
	.a-panel {
		margin: 5px;
		padding: 3px;
	}

	.a-panel-left {
		margin: 5px;
		padding: 3px;
	}

	.a-panel-right {
		margin: 5px;
		padding: 3px;
	}

}

@media screen and (min-width:600px){  /* >=600 */
	.a-panel {
		margin: 5px auto;
		padding: 3px;
		width: calc(70% - 15px);
	}

	.a-panel-left {
		display: inline-block;
		margin: 3px;
		padding: 3px;
		width: calc(50% - 15px);
		background: #eee;
	}

	.a-panel-right {
		display: inline-block;
		margin: 3px;
		padding: 3px;
		width: calc(50% - 15px);
		background: #eee;
	}
}
/* end --- 面板 响应式 --- end */

/* start --- 表格 --- start */
.a-table {
	margin-top: 5px;
	border-top: 1px solid #E6E6E6;
	border-left: 1px solid #E6E6E6;
	border-collapse: collapse;
	color: #757575;
	font-size: 14px;
	width: 100%;
	text-align: center;
}

.a-table th,
.a-table td {
	border-right: 1px solid #E6E6E6;
	border-bottom: 1px solid #E6E6E6;
	margin: 0;
	padding: 8px 15px;
}

.a-table th {
	font-weight: normal;
	background: #F2F2F2;
	color: #666;
}

.a-table tr {
	height: 30px;
	border-bottom: 1px solid #E6E6E6;
	border-left: 1px solid #E6E6E6;
}

.a-table tbody :hover {
	background-color: #f2f2f2;
}
/* end --- 表格 --- end */

/* start --- 样式 --- start */
.a-show {
	display: block !important;
}

.a-hide {
	display: none;
}

.a-dot {
	width: 8px;
	height: 8px;
    margin: 0 5px;
	border-radius: 8px;
	background-color: var(--color-blue);
}

.a-link {
    cursor: pointer;
	color: var(--color-blue);
	text-decoration: underline;
}

.a-verline {
	width: 2px;
	margin: 2px 5px;
	background-color: var(--color-blue);
}
/* end --- 样式 --- end */


/* start --- flex --- start */
.a-flex{
    display: flex;
}

.x-center {
	display: flex;
	justify-content: center;
}

.y-center {
	display: flex;
	align-items: center;
}

.a-full{
    width: 100%;
    height: 100%;
}

.a-flex-full{
	flex: 1;
}

.a-flex-warp{
    display: flex;
    flex-wrap: wrap;
}

.a-flex-column{
    display: flex;
    flex-direction: column;
}

.a-flex-space-between{
    display: flex;
    justify-content: space-between;
}

.a-flex-space-around{
    display: flex;
    justify-content: space-around;
}
/* end --- flex --- end */

/* start --- 布局 --- start */
.x-full{
    width: 100%;
    box-sizing: border-box;
}

.y-full{
    height: 100%;
}

.text-center{
    text-align: center;
}

.text-ellipsis{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.inline-block{
    display: inline-block;
}

.retract{
    padding: 0 5px;
}
/* end --- 布局 --- end */

/* start --- 卡片 --- start */
.a-card .a-card-title {
	background-color: #FFFFFF;
	padding: 12px 5px 10px 11px;
	box-sizing: border-box;
	display: flex;
	border-bottom: 1px solid #EEEEEE;
}

.a-card .a-card-body {
	font-size: 13px;
	background-color: #FFFFFF;
	padding: 11px;
	box-sizing: border-box;
	margin-bottom: 15px;
}
/* end --- 卡片 --- end */

/* start --- 表单 --- start */
.a-select {
	height: 22px;
	padding: 0 5px;
	border-radius: 2px;
	font-size: 10px;
	position: relative;
	top: -1px;
}

.a-label{
	margin: 0 ;
	display: flex;
	align-items: center;
    align-self: center;
	font-size: 8px;
	min-width: 60px;
	justify-content: flex-end;
}

.a-input{
    flex: 1;
	border: 1px solid #eee;
	margin: 10px;
	display: block;
	padding: 3px 5px;
}

.a-input-con{
	display: flex;
	margin: 5px;
}

.a-input-con .a-input{
	margin: 0;
}

.a-input-con .a-label{
	border: 1px solid #EEEEEE;
	border-right: none;
	padding: 7px 0;
	background-color: #f2f2f2;
	justify-content: center;
}

.a-input-con-line{
	margin: 5px;
	padding: 5px 10px;
	border-bottom: 1px solid #EEEEEE;
	display: flex;
}

.a-input-con-line .a-label{
	min-width: 50px;
	justify-content: center;
}

.a-input-con-line .a-input{
	margin: 0 0 0 10px;
	border: none;
	padding: 0;
	outline: none;
}
/* end --- 表单 --- end */

