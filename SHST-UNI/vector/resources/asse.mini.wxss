@charset "utf-8";

body,
page {
	margin: 0;
	font-family: Arial, Helvetica, 'STHeiti STXihei', 'Microsoft YaHei', Tohoma, sans-serif;
	padding: 10px;
	box-sizing: border-box;
	font-size: 15px;
	background-color: #F8F8F8;
	--color-blue: #4C98F7;
	--color-green: #009688;
	--color-yellow: #FFB800;
	--color-orange: #FF5722;
}

/**
 * 动画
 */
@keyframes shallow {
	from {
		opacity: 1;
	}

	to {
		opacity: 0.9;
	}
}

/**
 * Button
 * Color Size
 */

.a-btn {
	display: inline-block;
	height: 36px;
	line-height: 36px;
	padding: 0 20px;
	margin: 3px;
	border-radius: 3px;
	text-align: center;
	text-rendering: auto;
	font-size: 12px;
	cursor: pointer;
	background: var(--color-green);
	color: #fff;
	transition: all .3s;
}

.a-btn:hover {
	animation: shallow .3s;
	opacity: 0.9;
}

.a-btn-blue {
	background: var(--color-blue);
}

.a-btn-white {
	height: 34px;
	line-height: 34px;
	padding: 0 19px;
	background: #fff;
	color: #000;
	border: 1px solid #eee;
}

.a-btn-yellow {
	background: var(--color-yellow);
}

.a-btn-orange {
	background: var(--color-orange);
}

.a-btn-disable {
	background: #FBFBFB;
	color: #C9C9C9;
	cursor: not-allowed;
	border: 1px solid #eee;
}

.a-btn-large {
	height: 40px;
	line-height: 40px;
	padding: 0 23px;
	font-size: 16px;
}

.a-btn-small {
	height: 30px;
	line-height: 30px;
	padding: 0 10px;
	font-size: 12px;
}

.a-btn-mini {
	height: 22px;
	line-height: 22px;
	padding: 0 5px;
	border-radius: 2px;
	font-size: 10px;
}

.a-btn-cicle {
	height: 36px;
	width: 36px;
	line-height: 36px;
	border-radius: 36px;
	padding: 0;
}

/**
 * 组件
 */

.a-hr {
	display: block;
	height: 1px;
	background: #EEEEEE;
	border: none;
	margin: 5px 0;
}

.a-fieldset {
	margin-top: 10px;
	border: 1px solid #eee;
}

.a-textarea {
	border: 1px solid #eee;
	width: calc(100% - 22px);
	padding: 10px;
	border-radius: 3px;
	margin-top: 10px;
	color: #aaa;
}

/**
 * 面板
 */

@media screen and (max-width:600px) { /* <=600 */
	.a-panel {
		margin: 5px;
		padding: 3px;
	}

	.a-panel-left {
		margin: 5px;
		padding: 3px;
	}

	.a-panel-right {
		margin: 5px;
		padding: 3px;
	}

}

@media screen and (min-width:600px){  /* >=600 */
	.a-panel {
		margin: 5px auto;
		padding: 3px;
		width: calc(70% - 15px);
	}

	.a-panel-left {
		display: inline-block;
		margin: 3px;
		padding: 3px;
		width: calc(50% - 15px);
		background: #eee;
	}

	.a-panel-right {
		display: inline-block;
		margin: 3px;
		padding: 3px;
		width: calc(50% - 15px);
		background: #eee;
	}
}


/**
 * 表格
 */
.a-table {
	margin-top: 5px;
	border-top: 1px solid #E6E6E6;
	border-left: 1px solid #E6E6E6;
	border-collapse: collapse;
	color: #757575;
	font-size: 14px;
	width: 100%;
	text-align: center;
}

.a-table th,
.a-table td {
	border-right: 1px solid #E6E6E6;
	border-bottom: 1px solid #E6E6E6;
	margin: 0;
	padding: 8px 15px;
}

.a-table th {
	font-weight: normal;
	background: #F2F2F2;
	color: #666;
}

.a-table tr {
	height: 30px;
	border-bottom: 1px solid #E6E6E6;
	border-left: 1px solid #E6E6E6;
}

.a-table tbody :hover {
	background-color: #f2f2f2;
}

/**
 * 样式
 */

.a-show {
	display: block !important;
}

.a-hide {
	display: none;
}

.a-dot {
	width: 8px;
	height: 8px;
    margin: 0 5px;
	border-radius: 8px;
	background-color: var(--color-blue);
}

.a-link {
    cursor: pointer;
	color: var(--color-blue);
	text-decoration: underline;
}

.a-verline {
	width: 2px;
	margin: 2px 5px;
	background-color: var(--color-blue);
}

.a-retract{
    padding: 0 5px;
}

/**
 * flex
 */

.a-flex{
    display: flex;
}

.x-center {
	display: flex;
	justify-content: center;
}

.y-center {
	display: flex;
	align-items: center;
}

.a-full{
    width: 100%;
    height: 100%;
}

.a-flex-full{
	flex: 1;
}

.a-flex-warp{
    display: flex;
    flex-wrap: wrap;
}

.a-flex-space-between{
    display: flex;
    justify-content: space-between;
}

.a-flex-space-around{
    display: flex;
    justify-content: space-around;
}

/**
 * 布局
 */
.x-full{
    width: 100%;
    box-sizing: border-box;
}

.y-full{
    height: 100%;
}

.inline-block{
    display: inline-block;
}

.text-center{
    text-align: center;
}

/**
 * 卡片
 */
.a-card .a-card-title {
	background-color: #FFFFFF;
	padding: 12px 5px 10px 11px;
	box-sizing: border-box;
	display: flex;
	border-bottom: 1px solid #EEEEEE;
}

.a-card .a-card-body {
	font-size: 13px;
	background-color: #FFFFFF;
	padding: 11px;
	box-sizing: border-box;
	margin-bottom: 15px;
}

/**
 * 表单
 */
.a-select {
	height: 22px;
	padding: 0 5px;
	border-radius: 2px;
	font-size: 10px;
	position: relative;
	top: -1px;
}

.a-label{
	margin: 0 ;
	display: flex;
	align-items: center;
    align-self: center;
	font-size: 8px;
	min-width: 60px;
	justify-content: flex-end;
}

.a-input{
    flex: 1;
	border: 1px solid #eee;
	margin: 10px;
	display: block;
	padding: 3px 5px;
}

.a-input-con{
	display: flex;
	margin: 5px;
}

.a-input-con .a-input{
	margin: 0;
}

.a-input-con .a-label{
	border: 1px solid #EEEEEE;
	border-right: none;
	padding: 7px 0;
	background-color: #f2f2f2;
	justify-content: center;
}

.a-input-con-line{
	margin: 5px;
	padding: 5px 10px;
	border-bottom: 1px solid #EEEEEE;
	display: flex;
}

.a-input-con-line .a-label{
	min-width: 50px;
	justify-content: center;
}

.a-input-con-line .a-input{
	margin: 0 0 0 10px;
	border: none;
	padding: 0;
	outline: none;
}

